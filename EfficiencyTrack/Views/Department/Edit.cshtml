@model EfficiencyTrack.ViewModels.DepartmentViewModels.DepartmentEditViewModel

@{
    ViewData["Title"] = "Редакция на отдел";
}

<main class="container mt-4">
    <header class="mb-4">
        <h1 class="h3">Редактиране на отдел</h1>
    </header>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Име</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Запази</button>
            <a asp-action="Index" class="btn btn-secondary">Отказ</a>
        </div>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
