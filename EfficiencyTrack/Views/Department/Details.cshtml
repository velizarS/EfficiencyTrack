@model EfficiencyTrack.ViewModels.DepartmentViewModels.DepartmentDetailViewModel

@{
    ViewData["Title"] = "Детайли за отдел";
}

<main class="max-w-5xl mx-auto px-4 py-8">
    <div class="formDiv">
        <section aria-labelledby="details-heading" role="region">

            <h1 id="details-heading">
                @ViewData["Title"]
            </h1>

            <dl class="row mb-4">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Name) ? Model.Name : "-")</dd>

            <dt class="col-sm-3">Служители</dt>
            <dd class="col-sm-9">
                @if (Model.Employees != null && Model.Employees.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var emp in Model.Employees)
                        {
                            <li>👤 @emp.FullName (@emp.Code)</li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted fst-italic">Няма служители</span>
                }
            </dd>
        </dl>
        </section>
        <footer class="mt-4 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning d-inline-flex align-items-center gap-1">
                <i class="bi bi-pencil-square"></i> Редактирай
            </a>
            <a asp-action="Index" class="btn btn-secondary d-inline-flex align-items-center gap-1">
                <i class="bi bi-arrow-left-circle"></i> Назад
            </a>
        </footer>
    </div>
</main>
