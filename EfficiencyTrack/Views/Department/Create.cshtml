@model EfficiencyTrack.ViewModels.DepartmentViewModels.DepartmentCreateViewModel

@{
    ViewData["Title"] = "Създаване на отдел";
}

<main class="max-w-xl mx-auto px-4 py-5">
    <header class="mb-4">
        <h1 class="h3">@ViewData["Title"]</h1>
    </header>

    <section>
        <div class="formDiv">

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Име на отдел</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <footer class="d-flex gap-3 mt-4">
            <button type="submit" class="btn btn-primary">Създай</button>
            <a asp-action="Index" class="btn btn-secondary">Отказ</a>
        </footer>
    </form>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
