@model EfficiencyTrack.ViewModels.EmployeeViewModels.EmployeeDetailViewModel

@{
    ViewData["Title"] = "Изтриване на служител";
}

<main class="max-w-xl mx-auto px-4 py-5">
    <div class="formDiv">
        <header class="mb-4">
            <h1 class="text-danger">Потвърди изтриване</h1>
            <p class="lead ">Сигурни ли сте, че искате да изтриете този служител?</p>
        </header>


        <section class="border-danger mb-4">
        <dl class="row fs-5">
            <dt class="col-sm-3 fw-semibold">Код</dt>
            <dd class="col-sm-9">@Model.Code</dd>

            <dt class="col-sm-3 fw-semibold">Име</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3 fw-semibold">Отдел</dt>
            <dd class="col-sm-9">@Model.DepartmentName</dd>
        </dl>
    </section>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger d-inline-flex align-items-center gap-2">
            <i class="bi bi-trash"></i> Изтрий
        </button>
        <a asp-action="Index" class="btn btn-secondary d-inline-flex align-items-center gap-2">
            <i class="bi bi-x-circle"></i> Отказ
        </a>
    </form>
    </div>
</main>
