@model EfficiencyTrack.ViewModels.ShiftViewModels.ShiftDetailViewModel

@{
    ViewData["Title"] = "Детайли за смяна";
}

<main class="max-w-5xl mx-auto px-4 py-8">
    <section aria-labelledby="details-heading" role="region" class="bg-white shadow rounded border p-4">

        <h1 id="details-heading" class="h4 fw-bold mb-4 text-dark">
            @ViewData["Title"]
        </h1>

        <dl class="row mb-4">
            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-sm-8 fs-5">@Model.Name</dd>

            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.DurationMinutes)</dt>
            <dd class="col-sm-8 fs-5">@Model.DurationMinutes минути</dd>
        </dl>

        <a asp-action="Index" class="btn btn-link p-0 d-inline-flex align-items-center gap-2">
            <i class="bi bi-arrow-left"></i> Назад към списъка
        </a>
    </section>
</main>
