@model EfficiencyTrack.ViewModels.Shift.ShiftEditViewModel

@{
    ViewData["Title"] = "Редакция на смяна";
}

<main class="max-w-xl mx-auto px-4 py-8">
    <section aria-labelledby="edit-heading" class="bg-white shadow-md rounded-xl p-6 border border-gray-200">
        <h1 id="edit-heading" class="text-2xl font-semibold text-gray-800 mb-6">Редакция на смяна</h1>

        <form asp-action="Edit" method="post" class="space-y-6">
            <input type="hidden" asp-for="Id" />

            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="DurationMinutes" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="DurationMinutes" type="number" min="1" max="720" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="DurationMinutes" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex justify-between">
                <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition">Запази</button>
                <a asp-action="Index" class="text-gray-600 hover:text-indigo-600 transition">Отказ</a>
            </div>
        </form>
    </section>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
