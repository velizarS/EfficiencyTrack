@model EfficiencyTrack.ViewModels.RoutingViewModels.RoutingCreateViewModel

@{
    ViewData["Title"] = "Създай нов рутинг";
}

<main class="max-w-xl mx-auto px-4 py-5">
    <header class="mb-4">
        <h1 class="h3">@ViewData["Title"]</h1>
    </header>

    <section>
        <form asp-action="Create" method="post" class="card shadow-sm border-0 p-4">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Code" class="form-label fw-semibold"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Zone" class="form-label fw-semibold"></label>
                <select asp-for="Zone" class="form-select" asp-items="Model.AvailableZones">
                    <option value="">-- Избери зона --</option>
                </select>
                <span asp-validation-for="Zone" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MinutesPerPiece" class="form-label fw-semibold"></label>
                <input asp-for="MinutesPerPiece" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.1" />
                <span asp-validation-for="MinutesPerPiece" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DepartmentId" class="form-label fw-semibold"></label>
                <select asp-for="DepartmentId" class="form-select" asp-items="Model.AvailableDepartments">
                    <option value="">-- Избери отдел --</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger small"></span>
            </div>

            <footer class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-success d-inline-flex align-items-center gap-1">
                    <i class="bi bi-plus-circle"></i> Създай
                </button>
                <a asp-action="Index" class="btn btn-secondary d-inline-flex align-items-center gap-1">
                    <i class="bi bi-arrow-left-circle"></i> Отказ
                </a>
            </footer>
        </form>
    </section>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

}
