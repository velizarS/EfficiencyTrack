@model EfficiencyTrack.ViewModels.Routing.RoutingCreateViewModel

@{
    ViewData["Title"] = "Създай нов рутинг";
}

<main class="container mt-4">
    <header class="mb-4">
        <h1>@ViewData["Title"]</h1>
    </header>

    <section aria-labelledby="form-section">
        <form asp-action="Create" method="post" role="form">
            @Html.AntiForgeryToken()
            <fieldset>
                <legend class="visually-hidden">Данни за рутинга</legend>

                <div class="mb-3">
                    <label asp-for="Code" class="form-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Zone" class="form-label"></label>
                    <select asp-for="Zone" asp-items="Model.AvailableZones" class="form-select"></select>
                    <span asp-validation-for="Zone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MinutesPerPiece" class="form-label"></label>
                    <input asp-for="MinutesPerPiece" class="form-control" type="number" step="0.01" min="0.01" value="" placeholder="0.1" />
                    <span asp-validation-for="MinutesPerPiece" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label"></label>
                    <select asp-for="DepartmentId" asp-items="Model.AvailableDepartments" class="form-select"></select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
            </fieldset>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Създай</button>
                <a asp-action="Index" class="btn btn-secondary">Отказ</a>
            </div>
        </form>
    </section>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
