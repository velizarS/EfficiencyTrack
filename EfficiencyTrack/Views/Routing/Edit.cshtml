@model EfficiencyTrack.ViewModels.Routing.RoutingEditViewModel

@{
    ViewData["Title"] = "Редактиране на роутинг";
}

<main class="container mt-4">
    <header class="mb-4">
        <h1>@ViewData["Title"]</h1>
    </header>

    <section aria-labelledby="form-section">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Code" class="form-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Zone" class="form-label"></label>
                <select asp-for="Zone" class="form-select" asp-items="Model.AvailableZones">
                    <option value="">-- Избери зона --</option>
                </select>
                <span asp-validation-for="Zone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MinutesPerPiece" class="form-label"></label>
                <input asp-for="MinutesPerPiece" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="MinutesPerPiece" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DepartmentId" class="form-label"></label>
                <select asp-for="DepartmentId" class="form-select" asp-items="Model.AvailableDepartments">
                    <option value="">-- Избери отдел --</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <footer class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Запази</button>
                <a asp-action="Index" class="btn btn-secondary">Отказ</a>
            </footer>
        </form>
    </section>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
