@model EfficiencyTrack.ViewModels.RoutingViewModels.RoutingEditViewModel

@{
    ViewData["Title"] = "Редактиране на рутинг";
}

<main class="max-w-xl mx-auto px-4 py-6">
    <header class="mb-4">
        <h1 class="text-2xl fw-bold text-primary">@ViewData["Title"]</h1>
    </header>

    <section aria-label="Форма за редакция">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Code" class="form-label fw-semibold">Код</label>
                <input asp-for="Code" class="form-control" placeholder="Въведи код..." />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Описание на рутинга..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Zone" class="form-label fw-semibold">Зона</label>
                <select asp-for="Zone" class="form-select" asp-items="Model.AvailableZones">
                    <option value="">-- Избери зона --</option>
                </select>
                <span asp-validation-for="Zone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MinutesPerPiece" class="form-label fw-semibold">Мин./бройка</label>
                <input asp-for="MinutesPerPiece" type="number" step="0.01" class="form-control" placeholder="Пример: 2.50" />
                <span asp-validation-for="MinutesPerPiece" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DepartmentId" class="form-label fw-semibold">Отдел</label>
                <select asp-for="DepartmentId" class="form-select" asp-items="Model.AvailableDepartments">
                    <option value="">-- Избери отдел --</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <footer class="d-flex gap-2">
                <button type="submit" class="btn btn-primary d-inline-flex align-items-center gap-1">
                    <i class="bi bi-check-circle"></i> Запази
                </button>
                <a asp-action="Index" class="btn btn-secondary d-inline-flex align-items-center gap-1">
                    <i class="bi bi-x-circle"></i> Отказ
                </a>
            </footer>
        </form>
    </section>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
