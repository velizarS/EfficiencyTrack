@model EfficiencyTrack.ViewModels.RoutingViewModels.RoutingDetailViewModel

@{
    ViewData["Title"] = "Потвърди изтриване";
}

<main class="max-w-xl mx-auto px-4 py-5">
    <header class="mb-4">
        <h1 class="text-danger">Потвърди изтриване</h1>
        <p class="lead text-muted">Сигурни ли сте, че искате да изтриете този рутинг?</p>
    </header>

    <section class="card border-danger mb-4 shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <h6 class="fw-bold text-muted">Код:</h6>
                <p class="mb-0">@Model.Code</p>
            </div>
            <div class="mb-3">
                <h6 class="fw-bold text-muted">Описание:</h6>
                <p class="mb-0">@Model.Description</p>
            </div>
            <div class="mb-3">
                <h6 class="fw-bold text-muted">Зона:</h6>
                <p class="mb-0">@Model.Zone</p>
            </div>
            <div class="mb-3">
                <h6 class="fw-bold text-muted">Време за бройка:</h6>
                <p class="mb-0">@Model.MinutesPerPiece мин.</p>
            </div>
            <div class="mb-3">
                <h6 class="fw-bold text-muted">Отдел:</h6>
                <p class="mb-0">@Model.DepartmentName</p>
            </div>
        </div>
    </section>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()

        <footer class="d-flex gap-2">
            <button type="submit" class="btn btn-danger d-inline-flex align-items-center gap-1">
                <i class="bi bi-trash-fill"></i> Изтрий
            </button>
            <a asp-action="Index" class="btn btn-secondary d-inline-flex align-items-center gap-1">
                <i class="bi bi-arrow-left-circle"></i> Отказ
            </a>
        </footer>
    </form>

</main>
