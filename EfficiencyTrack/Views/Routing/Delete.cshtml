@model EfficiencyTrack.ViewModels.RoutingViewModels.RoutingDetailViewModel

@{
    ViewData["Title"] = "Потвърди изтриване";
}

<main class="max-w-xl mx-auto px-4 py-5">
    <div class="formDiv">
    <header class="mb-4">
        <h1 class="text-danger">Потвърди изтриване</h1>
        <p class="lead ">Сигурни ли сте, че искате да изтриете тази рутинг?</p>
    </header>
   

    <section class="border-danger mb-4">
            <dl class="row mb-4">
                <dt class="col-sm-4 ">@Html.DisplayNameFor(m => m.Code)</dt>
                <dd class="col-sm-8 ">@Model.Code</dd>

                <dt class="col-sm-4 ">@Html.DisplayNameFor(m => m.Description)</dt>
                <dd class="col-sm-8 ">@Model.Description</dd>

                <dt class="col-sm-4 ">@Html.DisplayNameFor(m => m.Zone)</dt>
                <dd class="col-sm-8 ">@Model.Zone</dd>

                <dt class="col-sm-4 ">@Html.DisplayNameFor(m => m.MinutesPerPiece)</dt>
                <dd class="col-sm-8 ">@Model.MinutesPerPiece</dd>

                <dt class="col-sm-4 ">@Html.DisplayNameFor(m => m.DepartmentName)</dt>
                <dd class="col-sm-8 ">@Model.DepartmentName</dd>
            </dl>
    </section>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()

        <footer class="d-flex gap-2">
            <button type="submit" class="btn btn-danger d-inline-flex align-items-center gap-1">
                <i class="bi bi-trash-fill"></i> Изтрий
            </button>
            <a asp-action="Index" class="btn btn-secondary d-inline-flex align-items-center gap-1">
                <i class="bi bi-arrow-left-circle"></i> Отказ
            </a>
        </footer>
        </form>
    </div>
</main>
