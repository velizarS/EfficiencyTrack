@model EfficiencyTrack.ViewModels.RoutingViewModels.RoutingDetailViewModel

@{
    ViewData["Title"] = "Детайли за рутинг";
}

<main class="max-w-xl mx-auto px-4 py-6">
    <header class="mb-4">
        <h1 class="text-2xl fw-bold text-primary">@ViewData["Title"]</h1>
    </header>

    <section class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <h6 class="fw-bold text-muted">Код:</h6>
                <p class="mb-0">@Model.Code</p>
            </div>
            <div class="mb-3">
                <h6 class="fw-bold text-muted">Описание:</h6>
                <p class="mb-0">@Model.Description</p>
            </div>
            <div class="mb-3">
                <h6 class="fw-bold text-muted">Зона:</h6>
                <p class="mb-0">@Model.Zone</p>
            </div>
            <div class="mb-3">
                <h6 class="fw-bold text-muted">Мин./бройка:</h6>
                <p class="mb-0">@Model.MinutesPerPiece</p>
            </div>
            <div class="mb-3">
                <h6 class="fw-bold text-muted">Отдел:</h6>
                <p class="mb-0">@Model.DepartmentName</p>
            </div>
        </div>
    </section>

    <footer class="mt-4 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning d-inline-flex align-items-center gap-1">
            <i class="bi bi-pencil-square"></i> Редактирай
        </a>
        <a asp-action="Index" class="btn btn-secondary d-inline-flex align-items-center gap-1">
            <i class="bi bi-arrow-left-circle"></i> Назад
        </a>
    </footer>
</main>
