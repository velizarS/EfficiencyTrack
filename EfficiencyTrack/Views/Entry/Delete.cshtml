@model EfficiencyTrack.ViewModels.EntryViewModel.EntryDetailsViewModel

@{
    ViewData["Title"] = "Потвърждение за изтриване";
}

<main class="container">
    <h1>Изтриване на запис</h1>

    <p class="text-danger mt-4">
        Сигурни ли сте, че искате да изтриете този запис? Това действие не може да бъде отменено.
    </p>

    <dl class="row mt-3">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Date)</dt>
        <dd class="col-sm-9">@Model.Date.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.EmployeeName)</dt>
        <dd class="col-sm-9">@Model.EmployeeName</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.RoutingName)</dt>
        <dd class="col-sm-9">@Model.RoutingName</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Pieces)</dt>
        <dd class="col-sm-9">@Model.Pieces</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Scrap)</dt>
        <dd class="col-sm-9">@Model.Scrap</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.WorkedMinutes)</dt>
        <dd class="col-sm-9">@Model.WorkedMinutes</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.EfficiencyForOperation)</dt>
        <dd class="col-sm-9">@Model.EfficiencyForOperation.ToString("0.##")%</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Изтрий</button>
        <a asp-action="Index" class="btn btn-secondary">Отказ</a>
    </form>

</main>
