@model EfficiencyTrack.ViewModels.EntryViewModel.EntryDetailsViewModel

@{
    ViewData["Title"] = "Детайли за запис";
}

<main class="max-w-5xl mx-auto px-4 py-8">
    <div class="formDiv">
        <section aria-labelledby="details-heading" role="region">

            <h1 id="details-heading">
                @ViewData["Title"]
            </h1>
        <dl class="row">
            <dt class="col-sm-3  fw-semibold">@Html.DisplayNameFor(m => m.Date)</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3  fw-semibold">@Html.DisplayNameFor(m => m.EmployeeCode)</dt>
            <dd class="col-sm-9">@Model.EmployeeCode</dd>

            <dt class="col-sm-3  fw-semibold">@Html.DisplayNameFor(m => m.EmployeeName)</dt>
            <dd class="col-sm-9">@Model.EmployeeName</dd>

            <dt class="col-sm-3  fw-semibold">@Html.DisplayNameFor(m => m.RoutingName)</dt>
            <dd class="col-sm-9">@Model.RoutingName</dd>

            <dt class="col-sm-3  fw-semibold">@Html.DisplayNameFor(m => m.Pieces)</dt>
            <dd class="col-sm-9">@Model.Pieces</dd>

            <dt class="col-sm-3  fw-semibold">@Html.DisplayNameFor(m => m.Scrap)</dt>
            <dd class="col-sm-9">@Model.Scrap</dd>

            <dt class="col-sm-3  fw-semibold">@Html.DisplayNameFor(m => m.WorkedMinutes)</dt>
            <dd class="col-sm-9">@Model.WorkedMinutes</dd>

            <dt class="col-sm-3  fw-semibold">@Html.DisplayNameFor(m => m.RequiredMinutes)</dt>
            <dd class="col-sm-9">@Model.RequiredMinutes</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(m => m.EfficiencyForOperation)</dt>
            <dd class="col-sm-9">@Model.EfficiencyForOperation.ToString("0.##")%</dd>
        </dl>
        </section>
        <footer class="mt-4 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning d-inline-flex align-items-center gap-1">
                <i class="bi bi-pencil-square"></i> Редактирай
            </a>
            <a asp-action="Index" class="btn btn-secondary d-inline-flex align-items-center gap-1">
                <i class="bi bi-arrow-left-circle"></i> Назад
            </a>
        </footer>
    </div>
</main>
