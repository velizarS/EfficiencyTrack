@model EfficiencyTrack.ViewModels.FeedbackViewModels.FeedbackCreateViewModel

@{
    ViewData["Title"] = "Нова обратна връзка";
}

<main class="container py-4">
    <header class="mb-4">
        <h1 class="h3">Нова обратна връзка</h1>
    </header>

    <section class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>
                <fieldset>
                    <legend class="visually-hidden">Въведете вашата обратна връзка</legend>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="EmployeeName" class="form-label fw-bold"></label>
                        <input asp-for="EmployeeName" class="form-control" />
                        <span asp-validation-for="EmployeeName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Message" class="form-label fw-bold"></label>
                        <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-send"></i> Изпрати
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Отказ
                        </a>
                    </div>
                </fieldset>
            </form>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
